<h1>My Product</h1>

<table>
  <thead>
  <col width="100">
  <col width="135">
  <col width="110">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_lists.each do |product_list| %>
      <tr id="<%= dom_id(product_list) %>">
        <td><%= product_list.name %></td>
        <td><%= product_list.description %></td>
        <td><%= product_list.price %></td>
        <td><%= link_to 'Show', product_list %></td>
        <td><%= link_to 'Edit', edit_product_list_path(product_list) %></td>
        <td><%= link_to 'Destroy', product_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

